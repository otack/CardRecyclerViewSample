<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <ripple android:color="@color/color_control_highlight">
            <item>
                <shape>
                    <solid android:color="@color/container_bg"/>
                    <corners android:topLeftRadius="@dimen/card_radius" android:topRightRadius="@dimen/card_radius"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/common_list_divider_bg"/>
        </shape>
    </item>
</layer-list>